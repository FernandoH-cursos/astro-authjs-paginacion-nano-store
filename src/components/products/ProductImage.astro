---
interface Props {
  src: string;
  alt: string;
  className: string;
}

const { src, alt, className } = Astro.props;

//* Se verifica si la imagen es una URL o una imagen local 
const currentImage = src.startsWith('http') ? src : `/images/products/${src}`;
---

<img src={currentImage} alt={alt} class:list={[className]}>